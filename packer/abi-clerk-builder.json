{
  "variables": {
    "npm_user"  : "{{env `NPM_USER`}}",
    "npm_pass"  : "{{env `NPM_PASS`}}",
    "npm_email" : "{{env `NPM_EMAIL`}}"
  },
  "builders" : [
    {
      "type": "docker",
      "image": "node:10.15",
      "commit": true
    }
  ],
  "provisioners" : [
    {
      "type": "shell",
      "inline": [
        "npm i -g npm-cli-login typescript create-react-app",
        "npm-cli-login -u {{user `npm_user`}} -p {{user `npm_pass`}} -e {{user `npm_email`}}",
        "npm cache verify",
        "npm i -g --unsafe --verbose @eximchain/dappsmith",
        "npm cache verify"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "manifests/abi-clerk-builder.json",
      "strip_path": true
    },
    [
      {
        "type": "docker-tag",
        "repository": "984931625683.dkr.ecr.us-east-1.amazonaws.com/eximchain/abi-clerk",
        "tag": "0.4"
      },
      {
        "type": "docker-push",
        "ecr_login": true,
        "login_server": "https://984931625683.dkr.ecr.us-east-1.amazonaws.com/"
      }
    ]
  ]
}